# Database
DATABASE_URL="postgres://user:password@host:port/db-name"

# Stripe Configuration (Optional - only if using Stripe)
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_PUBLISHABLE_KEY="pk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# Stripe Product/Price IDs (auto-generated by `pnpm run payments:sync`)
# Run the sync command to generate these values for your account
STRIPE_PRODUCT_JOB_POSTING_BASE="prod_..."
STRIPE_PRICE_JOB_POSTING_BASE="price_..."

# Stripe Upsell Products (configure based on your upsells)
STRIPE_PRODUCT_UPSELL_EMAIL_NEWSLETTER="prod_..."
STRIPE_PRICE_UPSELL_EMAIL_NEWSLETTER="price_..."

# Add more upsell product IDs as needed
# STRIPE_PRODUCT_UPSELL_YOUR_UPSELL_ID="prod_..."
# STRIPE_PRICE_UPSELL_YOUR_UPSELL_ID="price_..."

# Polar Configuration (Optional - only if using Polar)
POLAR_API_KEY="polar_at_..."
POLAR_WEBHOOK_SECRET="whsec_..."
POLAR_SERVER="sandbox"  # or "production"

# Polar Product/Price IDs (auto-generated by `pnpm run payments:sync:polar`)
# Run the sync command to generate these values for your account
POLAR_PRODUCT_JOB_POSTING_BASE="prod_..."
POLAR_PRICE_JOB_POSTING_BASE="price_..."

# Polar Upsell Products
POLAR_PRODUCT_UPSELL_EMAIL_NEWSLETTER="prod_..."
POLAR_PRICE_UPSELL_EMAIL_NEWSLETTER="price_..."

# App URL (for checkout redirects)
PUBLIC_APP_URL="http://localhost:5173"
